# 資料庫設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chemistry_db
DB_USER=chemistry_user
DB_PASSWORD=your_secure_password_here

# 伺服器設定
PORT=3000
NODE_ENV=production

# Session 密鑰 (請更改為隨機字串)
SESSION_SECRET=your_random_secret_key_here_change_this_in_production

# 檔案上傳設定
UPLOAD_PATH=/var/www/chemistry-app/uploads
MAX_FILE_SIZE_IMAGE=10485760
MAX_FILE_SIZE_DATA=52428800
MAX_FILES_PER_EXPERIMENT=20

# 安全設定
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=600000
